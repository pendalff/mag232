<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
	
	<referenceContainer name="div.sidebar.additional" htmlClass="sidebar sidebar-additional col">
		<block class="Magento\Framework\View\Element\Template" name="sidebar.additional.responsive.title" template="Magento_Theme::sidebarhtml/sidebar_title.phtml" before="-" />
	</referenceContainer>
	
	<referenceContainer name="after.body.start">
		<block class="Magento\Framework\View\Element\Template" name="sidebar.responsive.btn.right" template="Magento_Theme::sidebarhtml/sidebar_btn_right.phtml"/>
	</referenceContainer>
	
	<move element="div.sidebar.additional" destination="columns"/>
</layout>